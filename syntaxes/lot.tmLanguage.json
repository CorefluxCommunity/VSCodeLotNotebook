{
    "scopeName": "source.lot",
    "name": "LOT",
    "patterns": [
      { "include": "#comments" },
      { "include": "#keywords" },
      { "include": "#strings" }
    ],
    "repository": {
      "comments": {
        "patterns": [
          {
            "name": "comment.line.double-slash.lot",
            "match": "//.*$"
          },
          {
            "name": "comment.block.lot",
            "begin": "/\\*",
            "end": "\\*/",
            "captures": {
              "0": { "name": "punctuation.definition.comment.lot" }
            }
          }
        ]
      },
      "keywords": {
        "patterns": [
          {
            "name": "keyword.control.lot",
            "match": "\\b(DEFINE|MODEL|RULE|ROUTE|ACTION|PUBLISH|KEEP|GET|ON|EVERY|DO|IF|THEN|ELSE|SET|FILTER|REGEX|ADD|TOPIC|COLLAPSED|CALL|RETURN)\\b"
          }
        ]
      },
      "strings": {
        "patterns": [
          {
            "name": "string.quoted.double.lot",
            "begin": "\"",
            "end": "\""
          }
        ]
      }
    }
  }
  